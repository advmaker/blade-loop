{
    "name": "advmaker/blade-loop",
    "type": "library",
    "description": "Extends blade template engine with @loop, @endloop, @break, @continue and in-loop variables",
    "keywords": [
        "advmaker",
        "blade-loop",
        "blade-extensions"
    ],
    "homepage": "https://github.com/advmaker/blade-loop",
    "license": "MIT",
    "authors": [
        {
            "name": "Maksim (Ellrion) Platonov",
            "email": "ellrion11@gmail.com"
        },
        {
            "name": "Egor Zubarev",
            "email": "e.zubarev@advmaker.net"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "illuminate/support": "5.0.x|5.1.x|5.2.x",
        "illuminate/view": "5.0.x|5.1.x|5.2.x"

    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "orchestra/testbench": "3.0.x|3.1.x|3.2.x"
    },
    "autoload": {
        "psr-4": {
            "Advmaker\\BladeLoop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Advmaker\\BladeLoop\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
